{
  "title": "Location of NHS Hospitals",
  "dataset": "https://data.gov.uk/dataset/hospitals_",
  "indexes": ["partial_postcode", "name"],
  "geo": true,
  "fields": [
    {
      "type": "string",
      "name": "city"
    },
    {
      "type": "string",
      "name": "parent_name"
    },
    {
      "type": "string",
      "name": "latitude"
    },
    {
      "type": "string",
      "name": "organisation_id"
    },
    {
      "type": "string",
      "name": "email"
    },
    {
      "type": "string",
      "name": "website"
    },
    {
      "type": "string",
      "name": "fax"
    },
    {
      "type": "string",
      "name": "name"
    },
    {
      "type": "string",
      "name": "organisation_code"
    },
    {
      "type": "string",
      "name": "organisation_type"
    },
    {
      "type": "string",
      "name": "sub_type"
    },
    {
      "type": "string",
      "name": "address1"
    },
    {
      "type": "string",
      "name": "address2"
    },
    {
      "type": "string",
      "name": "address3"
    },
    {
      "type": "string",
      "name": "phone"
    },
    {
      "type": "string",
      "name": "organisation_status"
    },
    {
      "type": "string",
      "name": "postcode"
    },
    {
      "type": "string",
      "name": "longitude"
    },
    {
      "type": "string",
      "name": "sector"
    },
    {
      "type": "string",
      "name": "county"
    },
    {
      "type": "string",
      "name": "parent_o_d_s_code"
    },
    {
      "type": "string",
      "name": "is_pims_managed"
    },
    {
      "type": "string",
      "name": "partial_postcode"
    }
  ],
  "tablename": "hospitals",
  "theme": "health",
  "queries": [
    {
      "query": "select * from hospitals",
      "name": "all_hospitals",
      "description": "Show all hospitals"
    },
    {
      "query": "select * from hospitals where LOWER(partial_postcode) = LOWER($1)",
      "description": "Find hospitals using just a partial postcode  (e.g. CH64, or L1)",
      "name": "partial_postcode",
      "fields": [
        {
          "type": "string",
          "name": "partial_postcode",
          "default": "L3"
        }
      ]
    },
    {
      "query": "select * from hospitals where LOWER(name) ILIKE '%' || LOWER($1) || '%'",
      "description": "Find hospitals by name",
      "name": "name",
      "fields": [
        {
          "type": "string",
          "name": "name",
          "default": "Community Hospital"
        }
      ]
    },
    {
      "query": "select * from hospitals order by ST_Distance(LatLong, ST_SetSRID(ST_MakePoint($2, $1), 4326));",
      "description": "Find hospitals closest to a lat/lon point",
      "name": "nearest",
      "fields": [
        {
          "type": "float",
          "name": "lat",
          "default": "53.1"
        },
        {
          "type": "float",
          "name": "lon",
          "default": "3.0"
        }
      ]
    }
  ],
  "id": "hospitals",
  "choice_fields": [
    "city",
    "county"
  ]
}