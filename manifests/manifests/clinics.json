{
  "title": "Location of NHS Clinics",
  "dataset": "https://data.gov.uk/dataset/clinics",
  "geo": true,
  "fields": [
    {
      "type": "string",
      "name": "website"
    },
    {
      "type": "string",
      "name": "city"
    },
    {
      "type": "string",
      "name": "fax"
    },
    {
      "type": "string",
      "name": "name"
    },
    {
      "type": "string",
      "name": "organisation_code"
    },
    {
      "type": "string",
      "name": "organisation_type"
    },
    {
      "type": "string",
      "name": "phone"
    },
    {
      "type": "string",
      "name": "partial_postcode"
    },
    {
      "type": "string",
      "name": "address1"
    },
    {
      "type": "string",
      "name": "address2"
    },
    {
      "type": "string",
      "name": "address3"
    },
    {
      "type": "string",
      "name": "longitude"
    },
    {
      "type": "string",
      "name": "county"
    },
    {
      "type": "string",
      "name": "sub_type"
    },
    {
      "type": "string",
      "name": "is_pims_managed"
    },
    {
      "type": "string",
      "name": "organisation_status"
    },
    {
      "type": "string",
      "name": "latitude"
    },
    {
      "type": "string",
      "name": "organisation_id"
    },
    {
      "type": "string",
      "name": "email"
    },
    {
      "type": "string",
      "name": "postcode"
    }
  ],
  "tablename": "clinics",
  "theme": "health",
  "queries": [
    {
      "query": "select * from clinics where LOWER(partial_postcode) = LOWER($1)",
      "description": "Find clinics using just a partial postcode (e.g. CH64, or L1)",
      "name": "partial_postcode",
      "fields": [
        {
          "type": "string",
          "name": "partial_postcode",
          "default": "M1"
        }
      ]
    },
    {
      "query": "select * from clinics where LOWER(name) LIKE '%' || LOWER($1) || '%';",
      "description": "Find clinics by name",
      "name": "name",
      "fields": [
        {
          "type": "string",
          "name": "name",
          "default": "eye clinic"
        }
      ]
    },
    {
      "query": "select * from clinics order by ST_Distance(LatLong, ST_SetSRID(ST_MakePoint($2, $1), 4326));",
      "description": "Find clinics closest to a lat/lon point",
      "name": "nearest",
      "fields": [
        {
          "type": "float",
          "name": "lat",
          "default": "53.1"
        },
        {
          "type": "float",
          "name": "lon",
          "default": "3.0"
        }
      ]
    }
  ],
  "id": "clinics",
  "choice_fields": [
    "city",
    "county"
  ]
}